<%- include('../partials/html-head') %> 
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <br>
  <form action="/songs/<%= song._id %>?_method=PUT" method="POST" autocomplete="off">
    <div class="form-group">
      <label>Song Title</label>
      <input type="text" class="form-control" name="title" style="width: 30rem;" value="<%= song.title %> ">
    </div>
    <div class="form-group">
      <label>Artist</label>
      <input type="text" class="form-control" name="artist" value="<%= song.artist %> ">
    </div>
    <div class="form-group">
      <label>Song Link</label>
      <input type="text" class="form-control" name="link" value="<%= song.link %> ">
    </div>
    <button type="submit" class="btn btn-dark">Edit Song</button>
    </form>
</main>

<%- include('../partials/footer') %>
